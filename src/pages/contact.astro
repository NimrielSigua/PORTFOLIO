---
import BaseLayout from "../layouts/BaseLayout.astro";
import { FaEnvelope, FaPhone, FaMapMarkerAlt } from 'react-icons/fa';

---

<BaseLayout sideBarActiveItemID="contact">
  <div class="container">
    <h1><span class="coffee-bean"></span>Contact Me</h1>
    <div class="contact-grid">
      <div class="contact-info">
        <h2>Get in Touch</h2>
        <p>Feel free to reach out using the information below or by filling out the form.</p>
        <ul>
          <li><FaEnvelope />nimriellonghassigua@gmail.com</li>
          <li><FaPhone />+639365617954 | +639923319418</li>
          <li><FaMapMarkerAlt />Bulua, Cagayan De Oro City Mis. Or.</li>
        </ul>
      </div>
      <form class="contact-form" action="https://formspree.io/f/xpwaezzn" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="subject">Subject:</label>
        <input type="text" id="subject" name="subject" required>

        <label for="message">Message:</label>
        <textarea id="message" name="message" rows="5" required></textarea>

        <button type="submit">Send Message</button>
      </form>
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }
  h1 {
    color: #C59F60;
    text-align: center;
    margin-bottom: 2rem;
  }
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }
  .contact-info {
    background-color: #DB924B;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  input {
    background-color: #e6d2b5;
  }
  textarea {
    background-color: #e6d2b5;
  }
  .contact-info h2 {
    color: #2F1C0D;
    margin-bottom: 1rem;
    font-weight:bold;
  }
  .contact-info ul {
    list-style-type: none;
    padding: 0;
  }
  .contact-info li {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    color: #2F1C0D;
  }
  .contact-info li :global(svg) {
    margin-right: 0.5rem;
  }
  .contact-form {
    background-color: #DB924B;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  label {
    display: block;
    margin-bottom: 0.5rem;
    color: #2F1C0D;
  }
  input, textarea {
    width: 100%;
    padding: 0.5rem;
    margin-bottom: 1rem;
    border: 1px solid #d2b48c;
    border-radius: 4px;
  }
  button {
    background-color: #2F1C0D;
    color: #DB924B;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  button:hover {
    background-color: #8b5a2b;
  }
  :global(body) {
    background-color: #f5e5d5;
    color: #4a3728;
  }

  /* Responsive Styles */
  @media (max-width: 1024px) {
    .container {
      padding: 1.5rem;
    }
    h1 {
      font-size: 1.8rem;
    }
    .contact-info, .contact-form {
      padding: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
    h1 {
      font-size: 1.6rem;
    }
  }

  @media (max-width: 576px) {
    .container {
      padding: 1rem;
    }
    .contact-info, .contact-form {
      padding: 1rem;
    }
    h1 {
      font-size: 1.4rem;
    }
    button {
      width: 100%;
    }
  }

  /* Additional responsive adjustments */
  input, textarea {
    font-size: 1rem;
  }
</style>
