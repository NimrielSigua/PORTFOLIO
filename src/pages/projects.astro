---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { Image } from "astro:assets";

---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-2">Web projects</div>
  </div>

  <HorizontalCard
    title="Barangay Kauswagan Health Services Monitoring System"
       <Image class="mask mask-circle" format="webp" width={300} height={300} src="/kauswagan-logo-final" alt="Profile image" />
    desc="The Barangay Kauswagan Health Services Monitoring System is designed to provide an efficient and streamlined solution for managing health center operations. This system aims to enhance the retrieval process and simplify the monitoring of health records, allowing the barangay health center to deliver improved services to its residents. With its user-friendly interface and organized record-keeping, the system ensures quick access to accurate information, promoting better healthcare management and more effective decision-making for the community."
    url="#"
    badge="NEW"
  />

